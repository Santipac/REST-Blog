generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(uuid()) @map("_id")
  imageURL    String
  brief       String
  title       String
  body        String
  publishedAt DateTime
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  posts     Post[]
}
